<!DOCTYPE html>
<html>
  <head>
    <title>Hidden Mickey Pin Binder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>Hidden Mickey Pin Binder</h1>
    <nav>
      <% if logged_in? %>
        <%= link_to 'Add Pin', new_pin_path %>
        <%= link_to 'View Pins', pins_path %>
        <%= link_to 'View Series', series_index_path %>
        <%= link_to 'My Collection', user_path(current_user) %>
        <%= link_to 'Log Out', logout_path, method: :delete %>
      <% else %>
        <%= link_to 'Sign Up', signup_path %>
        <%= link_to 'Log In', login_path %>
        <%= link_to "Log In with Google", '/auth/google_oauth2' %>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
