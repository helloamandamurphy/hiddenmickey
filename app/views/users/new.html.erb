<h2>Welcome, New Pin Trader!</h2>

<%= render partial: 'layouts/errors', locals: { object: @user } %>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Sign Me Up!" %>
<% end %>
